<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
        android:id="@+id/ti_riwayatpenyakit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:labelText="Riwayat Penyakit"
        app:hasClearButton="true"
        app:useDenseSpacing="true"
        >

        <studio.carbonylgroup.textfieldboxes.ExtendedEditText
            android:id="@+id/edt_riwayatpenyakit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:lines="3"
            />

    </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>


    <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
        android:id="@+id/ti_alergimakanan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/medium_margin_globally"

        app:labelText="Alergi Makanan"
        app:hasClearButton="true"
        app:useDenseSpacing="true"
        >

        <studio.carbonylgroup.textfieldboxes.ExtendedEditText
            android:id="@+id/edt_alergimakanan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:lines="2"
            />

    </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>


    <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
        android:id="@+id/ti_alergiobat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:labelText="Alergi Obat"
        app:hasClearButton="true"
        app:useDenseSpacing="true"

        android:layout_marginTop="@dimen/medium_margin_globally"
        >

        <studio.carbonylgroup.textfieldboxes.ExtendedEditText
            android:id="@+id/edt_alergiobat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:lines="2"
            />

    </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>



    <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
        android:id="@+id/ti_catatandokter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:labelText="Catatan Dokter"
        app:hasClearButton="true"
        app:useDenseSpacing="true"
        android:layout_marginTop="@dimen/medium_margin_globally"
        >

        <studio.carbonylgroup.textfieldboxes.ExtendedEditText
            android:id="@+id/edt_catatandokter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:lines="2"
            />

    </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>


</LinearLayout>